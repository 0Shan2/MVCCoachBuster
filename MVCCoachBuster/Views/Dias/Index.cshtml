@model IEnumerable<MVCCoachBuster.Models.Dia>

@{
    ViewData["Title"] = "Listado de días del plan: " + Model.FirstOrDefault()?.Plan?.Nombre;
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">

            @foreach (var item in Model)
            {
                <a asp-controller="Dias" asp-action="Details" asp-route-id="@item.Id" class="day-link">
                    <div class="card mb-3">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @(ViewBag.TotalWods != 0 ? ViewBag.WodsCompletados * 100 / ViewBag.TotalWods : 0)%;" aria-valuenow="@ViewBag.WodsCompletados" aria-valuemin="0" aria-valuemax="@ViewBag.TotalWods"></div>

                                </div>
                            </div>
                            <i class="fas fa-arrow-right"></i>
                        </div>
                    </div>
                </a>
            }

        </div>
    </div>
</div>
