@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using MVCCoachBuster.ViewModels
@model ListadoViewModel<Usuario>

@{
    ViewData["Title"] = "Coachs";
}

<h1>@ViewData["Title"]</h1>
<br />


    <div class="row">
        @foreach (var coach in Model.Registros)
        {
            <div class="col-xl-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <img src="/images/@coach.Foto" style="width: 45px; height: 45px" class="rounded-circle" />
                                <div class="ms-3">
                                    <p class="fw-bold mb-1">@coach.Nombre</p>
                                    <p class="text-muted mb-0">Añadir más adelante un campo para describirse a si mismo, maybe</p>
                                </div>
                            </div>
                            <span class="badge rounded-pill badge-secondary">Acá no se</span>
                        </div>
                    </div>
                    <div class="card-footer border-0 bg-light p-2 d-flex justify-content-around">
                        <a class="btn btn-link m-0 text-reset" href="#" role="button" data-ripple-color="primary">
                            <i class="fa-solid fa-user-tie ms-2"></i>@coach.Correo
                        </a>
                    <a class="btn btn-link m-0 text-reset" href="#" role="button" data-ripple-color="primary">
                        <i class="fas fa-phone ms-2">@coach.Telefono</i>
                    </a>
                    </div>
                </div>
            </div>
        }
    </div>


