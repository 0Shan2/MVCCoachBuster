@model MVCCoachBuster.Models.Dia

@{
    ViewData["Title"] = "Create";
}


<h4>Agregar Dia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Campo oculto para PlanId -->
            <input type="hidden" asp-for="PlanId" value="@ViewBag.PlanId" />

            <div class="form-group">
                <label asp-for="NumDias" class="control-label"></label>
                <input asp-for="NumDias" class="form-control" />
                <span asp-validation-for="NumDias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

