<div>
    <div class="container">
        <h1>Calendario Dias</h1>
       
        <div class="row">
            @foreach (var dia in ViewBag.Dias)
            {
            <div class="col-md-2">
                <div class="card">
                    <div class="card-body">

                        <h5 class="card-title">

                          
                       
                                   @dia.NumDias 
                        
                         

                        </h5>
                        <p class="card-text">
                            <a asp-action="Edit" asp-route-id="@dia.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@dia.Id">Delete</a>
                            <button class="btn btn-primary me-3" type="submit">
                                <i class="fa-solid fa-floppy-disk"></i>&nbsp;Añadir Wod
                            </button>
                        </p>
                    </div>
                </div>
            </div>
            }
            <!-- Repite esto para los otros días de la semana -->
        </div>
       
    </div>

    <a asp-action="Index">Back to List</a>
</div>

