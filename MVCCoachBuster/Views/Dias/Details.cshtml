@model MVCCoachBuster.Models.Dia

@{
    ViewData["Title"] = "Detalles del Día";
}


<h3>@Model.Nombre</h3>


<div class="container">
    @{
        // Obtener el número total de WODs para este día
        int totalWODs = Model.Wod.Count;

        // Obtener el número de WODs completados para este día
        int wodsCompletados = Model.Wod.Count(w => w.IsCompleted == true);

        // Calcular el progreso como una fracción
        string progreso = $"{wodsCompletados}/{totalWODs} completados";
    }
    <div class="alert alert-info" role="alert">
        Progreso: @progreso
    </div>
    @foreach (var wod in Model.Wod)
    {
        <div class="card border-primary mb-4 ">
            <input class="form-check-input position-absolute top-0 end-0 m-3" type="checkbox"
                   data-wodxejercicio-id="@wod.WodXEjercicio.First().Id"
                   data-suscripcion-id="@ViewBag.IdSuscripcion"
                   onclick="MarcarWOD(this)">

            <div class="card-header">@wod.Nombre</div>
            <div class="card-body ">
           
                <ul>
                    @foreach (var wodXEjercicio in wod.WodXEjercicio)
                    {
                        <li>
                            @wodXEjercicio.GrupoEjercicios.Nombre
                            <a href="javascript:void(0);" onclick="openModal('instruccionesModal-@wodXEjercicio.GrupoEjercicios.Id')">
                                <i class="fas fa-sticky-note fa-lg"></i>
                            </a>
                            <a href="@wodXEjercicio.GrupoEjercicios.URLVideo" target="_blank">
                                <i class="fas fa-video fa-lg"></i>
                            </a>
                        </li>
                
                   
                    }
                </ul>
            </div>


  
        </div>
    }
</div>


@foreach (var wod in Model.Wod)
{
    @foreach (var wodXEjercicio in wod.WodXEjercicio)
    {
        <div id="instruccionesModal-@wodXEjercicio.GrupoEjercicios.Id" class="modal" style="display: none;" data-bs-backdrop="static" data-bs-keyboard="false">
            <div class="modal-dialog modal-dialog-centered ">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Instrucciones</h5>
                        <button type="button" class="btn-close" onclick="closeModal('instruccionesModal-@wodXEjercicio.GrupoEjercicios.Id')"></button>
                    </div>
                    <div class="modal-body">
                        <p>Instrucciones: @wodXEjercicio.GrupoEjercicios.Instrucciones</p>
                        <p>Video: @wodXEjercicio.GrupoEjercicios.URLVideo</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" onclick="closeModal('instruccionesModal-@wodXEjercicio.GrupoEjercicios.Id')">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    }
}



<a onclick="window.history.back();" class="btn btn-secondary">
    <i class="fa-solid fa-circle-arrow-left"></i>&nbsp;Regresar
</a>
<script>
    function openModal(modalId) {
        var modal = document.getElementById(modalId);
        modal.style.display = "block";

        // Agregar un manejador de eventos para cerrar el modal al hacer clic fuera de él
        window.onclick = function (event) {
            if (event.target == modal) {
                closeModal(modalId);
            }
        };
    }

    function closeModal(modalId) {
        var modal = document.getElementById(modalId);
        modal.style.display = "none";

        // Eliminar el manejador de eventos para evitar cierres no deseados
        window.onclick = null;
    }
  // Función para marcar un WOD
    function MarcarWOD(wodXEjercicioId, suscripcionId) {
        // Realizar la llamada AJAX para marcar el WOD
        $.ajax({
            type: 'POST',
            url: '@Url.Action("MarcarWOD", "Progreso")',
            data: { wodXEjercicioId: wodXEjercicioId, suscripcionId: suscripcionId },
            success: function () {
                // Actualizar el contenido del contenedor de progreso
                actualizarProgreso();
            },
            error: function () {
                // Manejar errores si es necesario
            }
        });
    }

    // Función para actualizar el progreso
    function actualizarProgreso() {
        // Realizar una nueva llamada AJAX para obtener el progreso actualizado
        $.ajax({
            type: 'GET',
            url: '@Url.Action("ObtenerProgreso", "Progreso")',
            data: { suscripcionId: '@ViewBag.IdSuscripcion' },
            success: function (progreso) {
                // Actualizar el contenido del contenedor de progreso
                $('#progreso-container').text('Progreso: ' + progreso);
            },
            error: function () {
                // Manejar errores si es necesario
            }
        });
    }




</script>