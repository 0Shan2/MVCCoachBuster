@model MVCCoachBuster.Models.Wod

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Wod</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Dias" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre">Nombre del Wod</label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DiaId" class="control-label"></label>
                <select asp-for="DiaId" class="form-control" asp-items="ViewBag.DiaId"></select>
            </div>
            <!-- Agregar selección de ejercicios -->
            <div class="form-group">
                <label>Seleccion de ejercicios</label>
                @foreach (var grupoEjercicio in ViewBag.GrupoEjercicios)
                {
                    <div>
                        <input type="checkbox" name="selectedGrupoEjercicios" value="@grupoEjercicio.Value" />
                        @grupoEjercicio.Text
                    </div>
                }
            </div>

            

            <button type="submit" class="btn btn-primary">Crear Wod con GrupoEjercicios</button>
        </form>
<div>
    <a asp-action="Index">Back to List</a>
</div>

